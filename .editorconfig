# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Settings for Java files
[*.java]
indent_style = tab 
indent_size = 4
tab_width = 4
max_line_length = 100

# Settings for XML files (e.g., pom.xml)
[*.xml]
indent_style = tab 
indent_size = 4
tab_width = 4
